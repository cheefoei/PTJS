<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="16dp"
    android:scrollbars="vertical"
    tools:context="com.TimeToWork.TimeToWork.Jobseeker.JobseekerRegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="16dp"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/baseline_person_black_24"
            android:hint="Name"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:padding="7dp" />

        <EditText
            android:id="@+id/ic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="16dp"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/baseline_text_format_black_24"
            android:hint="NRIC (E.g. 991011-06-1234)"
            android:inputType="text"
            android:maxLines="1" />

        <RadioGroup
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/baseline_face_black_24"
                android:fontFamily="@string/font_family_regular"
                android:padding="7dp"
                android:text="Gender"
                android:textColor="@color/colorWhite" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:buttonTint="@color/colorWhite"
                android:checked="true"
                android:text="Male"
                android:textColor="@color/colorWhite" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:buttonTint="@color/colorWhite"
                android:text="Female"
                android:textColor="@color/colorWhite" />
        </RadioGroup>

        <EditText
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="16dp"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/round_date_range_black_18"
            android:focusable="false"
            android:hint="Date Of Birth" />

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="16dp"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/baseline_contact_phone_black_24"
            android:hint="Phone Number"
            android:inputType="phone"
            android:maxLines="1" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="16dp"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/outline_email_black_24"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:maxLines="1" />

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="16dp"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/round_place_black_18"
            android:hint="Home Address"
            android:inputType="textPostalAddress"
            android:maxLines="1" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="16dp"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/outline_lock_black_24"
            android:hint="Password (E.g. A1234567)"
            android:inputType="textPassword"
            android:maxLines="1" />

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="16dp"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/outline_lock_black_24"
            android:hint=" Confirm Password (E.g. A1234567)"
            android:inputType="textPassword"
            android:maxLines="1" />
    </LinearLayout>

</ScrollView>
