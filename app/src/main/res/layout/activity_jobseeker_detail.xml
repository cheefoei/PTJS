<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.TimeToWork.TimeToWork.Jobseeker.JobseekerDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="@dimen/padding">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgUser"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:src="@drawable/user"
            app:civ_border_color="@color/colorBackground"
            app:civ_border_width="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgUser"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:fontFamily="@string/font_family_regular"
                    android:text="Name"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/edit_text_height"
                    android:layout_weight="0.8"
                    android:inputType="textPersonName"
                    android:labelFor="@id/name"
                    android:maxLines="1"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:fontFamily="@string/font_family_regular"
                    android:text="D.O.B"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/dob"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/edit_text_height"
                    android:layout_weight="0.8"
                    android:focusable="false"
                    android:hint="Your birthday"
                    android:inputType="text"
                    android:labelFor="@id/dob"
                    android:maxLines="1"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:fontFamily="@string/font_family_regular"
                    android:text="NRIC No."
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/ic"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/edit_text_height"
                    android:layout_weight="0.8"
                    android:inputType="textPersonName"
                    android:labelFor="@id/ic"
                    android:focusable="false"
                    android:maxLines="1"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="0.3"
                    android:fontFamily="@string/font_family_regular"
                    android:text="Gender"
                    android:textSize="15sp" />

                <RadioGroup
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_weight="0.7"
                    android:orientation="horizontal"
                    android:textSize="15sp">

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:text="Male"
                        android:textColor="#000" />

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:text="Female"
                        android:textColor="#000" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:focusable="false"
                    android:fontFamily="@string/font_family_regular"
                    android:text="Email"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/edit_text_height"
                    android:layout_weight="0.8"
                    android:focusable="false"
                    android:inputType="textEmailAddress"
                    android:labelFor="@id/email"
                    android:maxLines="1"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:fontFamily="@string/font_family_regular"
                    android:text="Contact No."
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/phoneNumber"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/edit_text_height"
                    android:layout_weight="0.8"
                    android:inputType="phone"
                    android:focusable="false"
                    android:labelFor="@id/phoneNumber"
                    android:maxLines="1"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:fontFamily="@string/font_family_regular"
                    android:text="Home Address."
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/edit_text_height"
                    android:layout_weight="0.8"
                    android:inputType="textPersonName"
                    android:labelFor="@id/address"
                    android:maxLines="1"
                    android:textSize="15sp" />

            </LinearLayout>

            <Button
                android:id="@+id/save"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorButtonGreen"
                android:text="Save" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>