<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="16dp"
    android:scrollbars="vertical"
    tools:context="com.TimeToWork.TimeToWork.Company.CompanyRegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="16dp"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/baseline_person_black_24"
            android:hint="Name"
            android:inputType="textPersonName"
            android:maxLines="1" />

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="16dp"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/round_place_black_18"
            android:hint="Company Address"
            android:inputType="textPostalAddress"
            android:maxLines="1" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="16dp"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/outline_email_black_24"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:maxLines="1" />

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="16dp"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/baseline_contact_phone_black_24"
            android:hint="Phone Number"
            android:inputType="phone"
            android:maxLines="1" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="16dp"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/outline_lock_black_24"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1" />

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="16dp"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/outline_lock_black_24"
            android:hint=" Confirm Password"
            android:inputType="textPassword"
            android:maxLines="1" />

    </LinearLayout>

</ScrollView>
