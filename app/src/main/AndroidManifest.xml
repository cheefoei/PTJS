<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.TimeToWork.TimeToWork">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.TimeToWork.TimeToWork.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.TimeToWork.TimeToWork.LoginRegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.TimeToWork.TimeToWork.JobDetailActivity"
            android:label="@string/activity_job_detail"
            android:parentActivityName="com.TimeToWork.TimeToWork.MainActivity" />
        <activity
            android:name="com.TimeToWork.TimeToWork.activity.company.CompanyMainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.TimeToWork.TimeToWork.activity.company.PostNewJobActivity"
            android:label="@string/activity_add_job_post"
            android:parentActivityName="com.TimeToWork.TimeToWork.activity.company.CompanyMainActivity" />
        <activity
            android:name="com.TimeToWork.TimeToWork.activity.company.UpdateJobPostActivity"
            android:label="@string/activity_update_job_post"
            android:parentActivityName="com.TimeToWork.TimeToWork.activity.company.CompanyMainActivity" />
        <activity
            android:name="com.TimeToWork.TimeToWork.activity.company.PaymentActivity"
            android:label="@string/activity_payment"
            android:parentActivityName="com.TimeToWork.TimeToWork.activity.company.PostNewJobActivity" />
        <activity
            android:name="com.TimeToWork.TimeToWork.activity.company.ApplicantListActivity"
            android:label="@string/activity_applicant"
            android:parentActivityName="com.TimeToWork.TimeToWork.JobDetailActivity" />
    </application>

</manifest>